<!DOCTYPE html>
<html ng-app="myApp">
<head>

	<meta name="viewport" content="initial-scale=1.0" />

	<script src="http://maps.google.com/maps/api/js"></script>
	<script src="https://code.angularjs.org/1.3.15/angular.js"></script>
	<script src="https://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.js"></script>
	<script src="/assets/welcome-script.js" type='text/javascript'></script>


</head>

<body ng-controller="CustomControlCtrl as vm">
  <div>
	  <p>Name : <input type="text" ng-model="name"></p>
	  <h1>Hello {{name}}</h1>
	</div>
	<div class="baltimore-map">
  <ng-map center="[39.29, -76.61]" zoom="13" default-style="true">
    <custom-control id="home" position="TOP_RIGHT" index="1" on-click="vm.click()">
      <div class="center-button">Center</div>
    </custom-control>
  </ng-map>
  </div>

  <p><%= @count %></p>
  <% @addresses.each do |address| %>
    <p><%= address %></p>
  <% end %>

  <div ng-app="ngMap">

    <div ng-repeat="dir in directions">
      <div style="width: 68%; float:left; height:450px">
        <ng-map style="height:100%" >
          <directions
            draggable="false"
            travel-mode="DRIVING"
            panel="{{dir.panelName}}"
            origin="{{dir.origin}}"
            destination="{{dir.destination}}">
          </directions>
        </ng-map>
      </div>
      <div id="{{dir.panelName}}" style="width: 32%; float:left; height:450px"></div>


      <h1>{{map.directionsRenderers[0].directions.routes[0].legs[0].distance.text}}</h1>
    </div>

  </div>

</body>

</html>




