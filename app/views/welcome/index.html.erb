<!DOCTYPE html>
<html ng-app="myApp">
<head>

	<meta name="viewport" content="initial-scale=1.0" />

	<script src="http://maps.google.com/maps/api/js"></script>
	<script src="https://code.angularjs.org/1.3.15/angular.js"></script>
	<script src="https://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.js"></script>
	<script src="/assets/welcome-script.js" type='text/javascript'></script>


</head>

<body ng-controller="CustomControlCtrl as vm">
  <div>
	  <p>Name : <input type="text" ng-model="name"></p>
	  <h1>Hello {{name}}</h1>
	</div>
	<div class="baltimore-map">
  <ng-map center="[39.29, -76.61]" zoom="13" default-style="true">
    <custom-control id="home" position="TOP_RIGHT" index="1" on-click="vm.click()">
      <div class="center-button">Center</div>
    </custom-control>
  </ng-map>
  </div>

  <% @addresses.each do |address| %>
    <p><%= address %></p>
  <% end %>

</body>

</html>



